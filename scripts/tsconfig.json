{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "outDir": "./",
  },
  "exclude": ["../node_modules"],
}
